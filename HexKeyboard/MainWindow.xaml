            <local:HexKebboardBtn Grid.Row="1" Grid.Column="2" Content="1"/>
            <local:HexKebboardBtn Grid.Row="1" Grid.Column="3" Content="2"/>
            <local:HexKebboardBtn Grid.Row="1" Grid.Column="4" Content="3"/>
